<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.vinisantana.slack">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".features.chat.ChatActivity">
        </activity>
        <activity android:name=".features.myprofile.MyProfileActivity">
        </activity>
        <activity android:name=".features.contacts.ContactsActivity">
        </activity>
        <activity android:name=".features.signup.SignupActivity">
        </activity>
        <activity android:name=".features.base.BaseActivity">
        </activity>
        <activity
                android:name=".features.login.MainActivity"
                android:theme="@style/AppTheme.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>